<p id="notice"><%= notice %></p>

<h1>Transfers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>created</th>
      <th>amount</th>
      <th>currency</th>
      <th>status</th>
      <th>type</th>
      <th>description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= Time.at(transfer['created']).to_datetime %></td>
        <td><%= transfer['amount'] %></td>
        <td><%= transfer['currency'] %></td>
        <td><%= transfer['status'] %></td>
        <td><%= transfer['type'] %></td>
        <td><%= transfer['description'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>